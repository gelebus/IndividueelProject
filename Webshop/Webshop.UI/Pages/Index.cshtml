@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div>
    <form method="post">
        <label>Name</label>
        <input asp-for="ProductVm.Name" />
        <label>Description</label>
        <input asp-for="ProductVm.Description" />
        <label>Value</label>
        <input asp-for="ProductVm.Value" />
        <input type="submit"/>
    </form>
</div>

<div>
    @{
        foreach (var Product in Model.Products)
        {
            <p>
                @Product.Name || @Product.Description || @Product.Value
            </p>
        }
    }
</div>
